                android:id="@+id/imageView338"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/compton5" />

            <TextView
                android:id="@+id/textView667"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
