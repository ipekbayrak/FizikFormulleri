            <ImageView
                android:id="@+id/imageView335"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/compton2" />

            <TextView
                android:id="@+id/textView663"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Enerji denklemine göre "
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView336"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/compton3" />

            <TextView
                android:id="@+id/textView664"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" dır. Frekans ile dalga boyu ters orantılı olduğundan "
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView337"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/compton4" />

            <TextView
                android:id="@+id/textView665"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" olarak yazılır.  "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Çizgisel momentum korunur. "
                android:textSize="18sp" />

