<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bir sistemdeki enerji; kinetik ve potansiyel gibi çok farklı türler halinde bulunabilir. Bu enerji türleri kendi aralarında dönüşüme uğrayabilir. Örneğin elektrik enerjisi ütüde ısıya, ampülde ışığa, çamaşır makinesinde hareket enerjisine dönüşür."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView64"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enerji kaybolmadan bir türden başka bir tür enerjiye dönüşür. Toplam enerji daima sabittir. Toplam enerji sabit ise, bir tür enerji azalırken başka bir tür enerji aynı oranda artar."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Sürtünmelerin ihmal edildiği sistemlerde kinetik ve potansiyel enerjilerin toplamı sabittir. Sürtünme olmadığı için ısıya dönüşen enerji olmaz. Mekanik enerji toplam enerjiye eşittir."
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView47"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/enerjikorunum1" />

            <TextView
                android:id="@+id/textView260"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kinetik enerjideki artış, potansiyel enerjideki azalışa ya da, kinetik enerjideki azalış, potansiyel enerjideki artışa eşittir."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView278"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Sürtünmenin olduğu sistemlerde mekanik enerji (Ek + Ep) sabit değildir. Zamanla mekanik enerji azalır. Azalma miktarı kadar enerji, sürtünmeden dolayı ısı enerjisine dönüşür. Toplam enerji ise sabittir."
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView160"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/enerjikorunum2" />
        </LinearLayout></ScrollView></android.support.constraint.ConstraintLayout>